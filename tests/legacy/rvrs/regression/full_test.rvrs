-- expect-fail

-- üß™ Function & Return Value Tests

flow giveDiscount() {
  return 0.10
}

flow computeTotal() {
  source base = 100.0
  delta discount = giveDiscount()
  source total = base - (base * discount)

  echo discount         -- expect 0.10
  echo total            -- expect 90.0
  return total
}

flow greet(name) {
  echo name
}

flow add(x, y) {
  delta result = x + y
  echo result
}

flow noArgs() {
  echo "No arguments needed."
}


-- üîÑ Control Flow & Branching

flow controlFlow() {
  source val = 42
  branch val == 42 {
    echo "The Answer"
  } else {
    echo "Wrong universe"
  }
}

flow returnInsideBranch {
  branch truth {
    return 99
  }
  echo "This should not appear"
}


-- üß† Expr, Logic, and Math

flow expressionTest() {
  source x = 10 + 2 * 5 - 3 / 3
  echo x              -- expect 19.0
}

flow logicTest {
  assert not void         -- expect true
  assert truth and truth  -- expect true
  assert truth or void    -- expect true
  assert void or void     -- expect false
}

flow negationTest {
  source x = -42
  echo x
}


-- üß™ Assertions & Error Cases

flow testAssert {
  assert 1 == 1           -- should pass
  assert 2 == 3           -- should fail
  assert "hello"          -- non-boolean
}

flow divZeroTest {
  source fail = 10 / 0
  whisper fail
}

flow mouthError {
  mouth missingVar        -- undefined variable
}


-- üîí Scoping, Shadowing, and Source Constraints

flow shadowTest() {
  delta x = 5
  echo x
  branch truth {
    delta x = 99
    echo x
  }
  echo x
}

flow testScope {
  branch truth {
    delta temp = 42
    echo temp
  }
  echo temp               -- should error: out of scope
}

flow testSourceReassign {
  source pi = 3.14
  delta pi = 0.0          -- should error: cannot reassign source
  echo pi
}


-- ‚ö†Ô∏è Argument Handling

flow argTest {
  greet("Carlos")
  add(7, 8)
}

flow testArgMismatch {
  add(1)             -- too few arguments
}

flow testEmptyCall {
  noArgs()
}


-- üé¨ Entry Point

flow main {
  echo "Testing RVRS full suite:"
  shadowTest()
  controlFlow()
  expressionTest()
  logicTest()
  testAssert()
  divZeroTest()
  returnInsideBranch()
  negationTest()
  mouthError()
  testScope()
  testSourceReassign()
  testArgMismatch()
  testEmptyCall()
  source result = computeTotal()
  echo result
  argTest()
  mouth "‚úÖ All systems go"
}
